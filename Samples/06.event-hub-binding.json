                    "method": "post",
                    "path": "/@{encodeURIComponent('logic-app-destination')}/events"
                },
                "runAfter": {
                    "Compose": [
                        "Succeeded"
                    ]
                },
                "type": "ApiConnection"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "parameters": {
            "$connections": {
                "defaultValue": {},
                "type": "Object"
            }
        },
        "triggers": {
          "When_events_are_available_in_Event_Hub": {
            "inputs": {
              "type": "eventHubTrigger",
              "connection": "EventHubConnection",
              "direction": "in",
              "eventHubName": "durable-source",
              "name": "eventData"
            },
            "type": "Binding"
          }
        }
    }
